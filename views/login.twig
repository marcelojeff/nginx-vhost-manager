{% extends "layout.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Login</h2>
                </div>
                <div class="panel-body">
                    <form action="{{ path('login_check') }}" class="form" method="post">
                        <div class="form-group">
                            <label for="">Usu√°rio</label>
                            <input name="_username" type="text" class="form-control" value="{{ last_username }}">
                        </div>
                        <div class="form-group">
                            <label for="">Senha</label>
                            <input name="_password" type="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success" type="submit">
                                <span class="glyphicon glyphicon-ok"></span> Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}